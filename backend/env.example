# ConnectUS Backend - Configuração
# Copie este arquivo para .env e configure os valores

# Sistema
VITE_SYSTEM_PROMPT=Você é a VEXA IA, assistente educacional da ConnectUS
SECRET_KEY=troque-por-uma-chave-forte
ALGORITHM=HS256

# Database
DATABASE_URL=sqlite:///./connectus.db

# OpenAI Configuration
OPENAI_API_KEY=sk-xxxxxxxx
OPENAI_API_KEY_TEST=sk-xxxxxxxx
OPENAI_MODEL=gpt-4o-mini
AI_PROVIDER=openai

# JWT Configuration
JWT_SECRET_KEY=troque-por-uma-chave-jwt-forte
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]

# Feature Flags
ENABLE_MISSIONS_V2=true
ENABLE_QR_VERIFICATION=false
ENABLE_GEO_VERIFICATION=false